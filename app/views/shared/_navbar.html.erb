<div class="navbar-tribo navbar-fixed-top">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-tribo-brand" do %>
    <%= image_tag "logos/logo.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-tribo-right hidden-xs hidden-sm">


    <% if user_signed_in? %>

      <!-- Links when logged in -->

      <%= link_to "Location", "#", class: "navbar-tribo-item navbar-tribo-link" %>
      <%= link_to "Host", "#", class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to conversations_path, class: "navbar-wagon-item navbar-wagon-link" do %>
      <% Conversation.where("sender_id = ? OR receiver_id = ?", current_user.id, current_user.id).each do |conversation| %>
      <span class="nav-notification"> <% if !conversation.unread_message_count(current_user).zero? %>
        (<%= conversation.unread_message_count(current_user) %>)
        <% end %>

      </span>
      <% end %>
      Messages
      <% end %>

      <%= link_to "Location", "#", class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-tribo-item">
        <div class="dropdown">
          <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/30x30" %>
            <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-tribo-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-tribo-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  LOGIN
</button>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "btn white btn--sm type--uppercase"%>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-tribo-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-tribo-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>
