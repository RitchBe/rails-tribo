<div class="container" style="margin-top:80px; min-height:100vh;">
  <div class="col-sm-12 col-md-10 col-md-offset-1">
  <h2 class="readme-header">
    My bookings
    </h2>
    <% @bookings.each_with_index do | p, i | %>
    <div class="booking-index">
      <img src="https://kitt.lewagon.com/placeholder/users/gabriel-dehan" alt="" class="avatar-large">
      <div class="booking-index-name">
        <h3><%= Location.find(p.location_id).name %></h3>
        <p><%= p.begin %> to <%= p.end %></p>
      </div>
      <div class="booking-index-body">
        <p><strong>Review</strong></p>
        <p>
          <%= p.worker_review %>
        </p>
      </div>
      <div class="booking-index-status">
        <p class="status pending">Pending</p>
        <p class="price">â‚¬345</p>
      </div>
    </div>
    <% end %>
  </div>
</div>
