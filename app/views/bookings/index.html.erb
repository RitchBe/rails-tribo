<div class="container" style="margin-top:80px; min-height:100vh;">
  <div class="col-sm-12 col-md-10 col-md-offset-1">
  <h2 class="readme-header">
    My bookings
    </h2>
    <hr style="margin: 0px;">
    <% @bookings.each_with_index do | p, i | %>
    <a href="<%= location_path(p.location_id) %>">
    <div class="booking-index">
      <img src="<%= cl_image_path(Location.find(p.location_id).photos[0].path) %>" alt="" class="avatar-bookings">
      <div class="booking-index-name">
        <h3><%= Location.find(p.location_id).name %></h3>
        <p style="text-align:left;"><%= p.begin %> to <%= p.end %></p>
      </div>
      <div class="booking-index-body" >
        <p style="text-align: left"><strong>Review</strong></p>
        <p style="text-align: left">
          <%= p.worker_review %>
        </p>
      </div>
      <div class="booking-index-status">
        <p class="status pending"><%= p.status %></p>
        <p class="price"><%= p.price %>â‚¬</p>
      </div>
    </div>
    </a>
    <hr style="margin: 0px;">
    <% end %>
  </div>
</div>
